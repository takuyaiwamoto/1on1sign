{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "Node10",
    "lib": ["es2021"],
    "types": ["node"],
    "allowJs": false,
    "isolatedModules": false
  },
  "include": ["server/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", ".next", "app"]
}
